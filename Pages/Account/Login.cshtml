@page
@model assignment3_b3w.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>

<h4>Use a local account to log in.</h4>


<form method="POST">
    <div class="form-group">
        <label asp-for="Credential.Username"></label>
        <span class="text-danger">*</span>
        <input asp-for="Credential.Username" class="form-control" />
        <span asp-validation-for="Credential.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Credential.Password"></label>
        <span class="text-danger">*</span>
        <input asp-for="Credential.Password" class="form-control" />
        <span asp-validation-for="Credential.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Log in</button>
    <a asp-page="/Account/Register" class="btn btn-link">Register</a>
    <div>
        <span class="text-danger">@Model.ErrorMessage</span>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

