@page
@model assignment3_b3w.Pages.Event.ReportModel
@{
    ViewData["Title"] = "Reports and Analytics";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Total Events: @Model.TotalEventCount</h4>
    <h4>Total Attendees: @Model.TotalAttendeeCount</h4>
</div>
<div>
    <h3>Participation Trends</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Event Count</th>
                <th>Attendee Count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trend in Model.ParticipationTrends)
            {
                <tr>
                    <td>@trend.Date.ToString("yyyy-MM-dd")</td>
                    <td>@trend.EventCount</td>
                    <td>@trend.AttendeeCount</td>
                </tr>
            }
        </tbody>
    </table>
</div>