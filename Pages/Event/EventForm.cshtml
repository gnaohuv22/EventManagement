@page
@model assignment3_b3w.Pages.Event.EventFormModel
@{
    ViewData["Title"] = Model.IsEditMode ? "Edit Event" : "Create Event";
}

<h2>@ViewData["Title"]</h2>

<form method="POST">
    <input type="hidden" asp-for="Event.EventId"/>
    <input type="hidden" asp-for="IsEditMode"/>
    <div class="form-group">
        <label asp-for="Event.Title" class="control-label"></label>
        <span class="text-danger">*</span>
        <input asp-for="Event.Title" class="form-control" />
        <span asp-validation-for="Event.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Event.Description" class="control-label"></label>
        <span class="text-danger">*</span>
        <textarea asp-for="Event.Description" class="form-control"></textarea>
        <span asp-validation-for="Event.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Event.StartTime" class="control-label"></label>
        <span class="text-danger">*</span>
        <input asp-for="Event.StartTime" class="form-control" />
        <span asp-validation-for="Event.StartTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Event.EndTime" class="control-label"></label>
        <span class="text-danger">*</span>
        <input asp-for="Event.EndTime" class="form-control" />
        <span asp-validation-for="Event.EndTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Event.Location" class="control-label"></label>
        <span class="text-danger">*</span>
        <input asp-for="Event.Location" class="form-control" />
        <span asp-validation-for="Event.Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Event.CategoryId" class="control-label"></label>
        <span class="text-danger">*</span>
        <select asp-for="Event.CategoryId" class="form-control" asp-items="Model.CategoryList"></select>
        <span asp-validation-for="Event.CategoryId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">@ViewData["Title"]</button>
    <div>
        <span class="text-danger">@Model.ErrorMessage</span>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}